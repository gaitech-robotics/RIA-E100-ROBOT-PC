<?xml version="1.0"?>
<launch>
  <!-- vim: set ft=xml noet : -->
  <!-- example launch script for PX4 based FCU's -->

  <arg name="fcu_url" default="/dev/RiaIMU:19200" />
  <arg name="gcs_url" default="" />
  <arg name="tgt_system" default="1" />
  <arg name="tgt_component" default="1" />
  <arg name="log_output" default="log" />
  <arg name="fcu_protocol" default="v2.0" />

  <!-- mavros launch -->
  <include file="$(find e100_bringup)/launch/include/node.launch.xml">
    <arg name="pluginlists_yaml" value="$(find mavros)/launch/px4_pluginlists.yaml" />
    <arg name="config_yaml" value="$(find mavros)/launch/px4_config.yaml" />
    <arg name="fcu_url" value="$(arg fcu_url)" />
    <arg name="gcs_url" value="$(arg gcs_url)" />
    <arg name="tgt_system" value="$(arg tgt_system)" />
    <arg name="tgt_component" value="$(arg tgt_component)" />
    <arg name="log_output" value="$(arg log_output)" />
    <arg name="fcu_protocol" value="$(arg fcu_protocol)" />
  </include>

  <!-- imu complementary filter launch -->
  <node pkg="imu_complementary_filter" type="complementary_filter_node"
      name="complementary_filter_gain_node" output="screen">
    <param name="do_bias_estimation" value="true"/>
    <param name="do_adaptive_gain" value="true"/>
    <param name="use_mag" value="false"/>
    <param name="gain_acc" value="0.002"/>
    <param name="gain_mag" value="0.001"/>
    <remap from="imu/data_raw" to="mavros/imu/data"/>
    <remap from="imu/mag" to="mavros/imu/mag"/>
    <remap from="imu/data" to="e100_imu"/>
  </node>

  <node pkg="e100_base" name="param" type="param" respawn="false" output="screen"  />
 
</launch>
